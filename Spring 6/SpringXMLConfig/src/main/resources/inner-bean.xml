<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                               http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="programmer" class="com.rods.Programmer" autowire="byType">
        <property name="age" value="21"></property>
        <property name="name" value="Sian"></property>
        <property name="computer">

            <!-- Notice that in this case the Desktop bean can only be used by the Computer bean-->
            <bean id="desktop" class="com.rods.Desktop" primary="true" lazy-init="true">

            </bean>
        </property>

    </bean>


    <bean id="laptop" class="com.rods.Laptop" primary="false">

    </bean>


</beans>
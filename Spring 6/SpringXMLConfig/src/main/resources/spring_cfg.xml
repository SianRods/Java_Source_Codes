<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                               http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- init bean of the type Programmer using default method of singelton   -->
    <bean id="programmer" class="com.rods.Programmer">
    </bean>


    <!-- init the laptop object with prototype so that object will only be created when they
    are requested through the getBeans() method -->
    <bean id="laptop" class="com.rods.Laptop" scope="prototype">
    </bean>

</beans>